{
  "swagger": "2.0",
  "info": {
    "description": "APIs to handle transactions.",
    "version": "0.0.1",
    "title": "Transaction details"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/transactions": {
      "get": {
        "operationId": "getAllTransactions",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Get all transactions",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Transaction"
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createTransaction",
        "parameters": [
          {
            "in": "body",
            "name": "transaction",
            "description": "Details of transaction we want to save",
            "required": false,
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Transaction created successfully"
          }
        }
      }
    },
    "/transactions/{id}": {
      "put": {
        "operationId": "updateTransactionById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of the Transaction.",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "transaction",
            "description": "Details of the transaction",
            "required": false,
            "schema": {
              "$ref": "#/definitions/Transaction"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaction updated successfully"
          }
        }
      }
    }
  },
  "definitions": {
    "Transaction": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "description": {
          "type": "string"
        }
      }
    }
  },
  "/categories": {
    "get": {
      "operationId": "getAllCategories",
      "responses": {
        "200": {
          "description": "List of all transaction categories",
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Category"
            }
          }
        }
      }
    },
    "post": {
      "operationId": "createCategory",
      "parameters": [
        {
          "in": "body",
          "name": "category",
          "required": true,
          "schema": {
            "$ref": "#/definitions/Category"
          }
        }
      ],
      "responses": {
        "201": {
          "description": "Category created successfully"
        }
      }
    }
  },

  "/transactions/export": {
    "get": {
      "operationId": "exportTransactions",
      "parameters": [
        {
          "name": "format",
          "in": "query",
          "type": "string",
          "enum": ["CSV", "PDF", "EXCEL"],
          "required": true
        },
        {
          "name": "startDate",
          "in": "query",
          "type": "string",
          "format": "date"
        },
        {
          "name": "endDate",
          "in": "query",
          "type": "string",
          "format": "date"
        }
      ],
      "responses": {
        "200": {
          "description": "Export file",
          "schema": {
            "type": "file"
          }
        }
      }
    }
  },

  "/templates": {
    "get": {
      "operationId": "getTransactionTemplates",
      "responses": {
        "200": {
          "description": "List of transaction templates",
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/TransactionTemplate"
            }
          }
        }
      }
    },
    "post": {
      "operationId": "createTemplate",
      "parameters": [
        {
          "in": "body",
          "name": "template",
          "required": true,
          "schema": {
            "$ref": "#/definitions/TransactionTemplate"
          }
        }
      ],
      "responses": {
        "201": {
          "description": "Template created successfully"
        }
      }
    }
  },

  "/recurring-transactions": {
    "get": {
      "operationId": "getRecurringTransactions",
      "responses": {
        "200": {
          "description": "List of recurring transactions",
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/RecurringTransaction"
            }
          }
        }
      }
    },
    "post": {
      "operationId": "createRecurringTransaction",
      "parameters": [
        {
          "in": "body",
          "name": "recurringTransaction",
          "required": true,
          "schema": {
            "$ref": "#/definitions/RecurringTransaction"
          }
        }
      ],
      "responses": {
        "201": {
          "description": "Recurring transaction created successfully"
        }
      }
    }
  },

  "/transactions/{id}/approve": {
    "post": {
      "operationId": "approveTransaction",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "type": "string"
        },
        {
          "in": "body",
          "name": "approval",
          "required": true,
          "schema": {
            "$ref": "#/definitions/TransactionApproval"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Transaction approved successfully"
        },
        "403": {
          "description": "Insufficient permissions"
        }
      }
    }
  },
  "Category": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "parentCategoryId": {
        "type": "string"
      },
      "budgetLimit": {
        "type": "number"
      }
    }
  },

  "TransactionTemplate": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "amount": {
        "type": "number"
      },
      "categoryId": {
        "type": "string"
      },
      "defaultTags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },

  "RecurringTransaction": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "transactionTemplate": {
        "$ref": "#/definitions/TransactionTemplate"
      },
      "frequency": {
        "type": "string",
        "enum": ["DAILY", "WEEKLY", "MONTHLY", "YEARLY"]
      },
      "startDate": {
        "type": "string",
        "format": "date"
      },
      "endDate": {
        "type": "string",
        "format": "date"
      },
      "nextExecutionDate": {
        "type": "string",
        "format": "date"
      },
      "status": {
        "type": "string",
        "enum": ["ACTIVE", "PAUSED", "COMPLETED"]
      }
    }
  }
}
